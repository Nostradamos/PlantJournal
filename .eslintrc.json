{
    "parserOptions": {
  	"ecmaVersion": 8
    },
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single",
            {
                "allowTemplateLiterals": true
            }
	    ],
        "semi": [
            "error",
            "always"
        ],
	    "no-unsafe-finally": [
            "off"
	    ],
	    "no-unused-vars": [
             "error",
	         {"args": "none"}
	    ],
        "no-trailing-spaces": [
            "error"
        ],
        "no-unexpected-multiline": [
            "off"
        ]
    }
}
