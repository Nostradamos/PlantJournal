{
  "parserOptions": {
	"ecmaVersion": 8
  },
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "indent": [
      "error",
      2
    ],
    "max-len": [
      "warn",
      {
        "code": 80,
        // Ignore describe and it methods for tests
        "ignorePattern": "^(\\s*)(describe|it)(\\s*)\\(.*$"
      }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single",
      {
        "allowTemplateLiterals": true
      }
    ],
    "quote-props": [
      "error",
      "as-needed"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-unsafe-finally": [
      "off"
    ],
    "no-unused-vars": [
     "error",
     {"args": "none"}
    ],
    "no-trailing-spaces": [
      "error"
    ],
    "no-unexpected-multiline": [
      "off"
    ],
    "require-jsdoc": [
      "warn",
      {
        "require": {
          "FunctionDeclaration": true,
          "MethodDefinition": true,
          "ClassDeclaration": true,
          "ArrowFunctionExpression": true
        }
      }
    ],
    "valid-jsdoc": [
      "error",
      {
        "requireReturn": false
      }
    ]
  }
}
